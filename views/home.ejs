<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="../css/home.css" />
    <link rel="stylesheet" href="../css/update-button.css" />
    <link rel="stylesheet" href="../css/delete-button.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <title><%=title%></title>
  </head>
  <body style="background-color: rgb(90, 88, 85); ">
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand text-success" href="#">Employee</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <% nav.forEach((item) => { %>

            <li class="nav-item d-flex align-items-center mx-3">
              <i
                class="bi <%=item.icon%>"
                style="color: rgb(255, 255, 255)"
              ></i>
              <a
                class="nav-link active home fw-bold"
                aria-current="page"
                href="<%=item.link%>"
                ><%=item.name%></a
              >
            </li>

            <% }); %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <table class="table table-sm table-dark">
        <thead>
          <tr style="color: brown; font-size: x-large"> 
            <th></th>
            <th scope="col">Name</th>
            <th scope="col">Last Name</th>

            <th scope="col">Designation</th>
            <th scope="col">Location<i class="bi bi-geo-alt"></i></th>
            <th scope="col">Salary<i class="bi bi-currency-rupee"></i></th>
          </tr>
        </thead>
        <tbody>
          <% emp.forEach(function(item,index) { %>
          <tr style="border: 2px rgb(2, 49, 138) solid">
            <th scope="row"><%=index +1%></th>
            <td><%= item.EmployeeName %></td>
            <td><%= item.ltname %></td>
            <td><%= item.EmployeeDesignation %></td>
            <td><%= item.EmployeeLocation %></td>
            <td><%= item.Salary %></td>
            <td style="width: 200px">
              <a href="/api/update/<%=item._id%>" class="update" >Update</a>
          
               <a href="/api/delete/<%=item._id%>" class="delete" >Delete</a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
